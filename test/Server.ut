  it("/createGame - /join - /addRobot - /game - /leave - /removeRobot - /simple / - /history - /deleteGame", () => {
    const config = {
      auth: {
        "sessionSecret": "cross words",
        "db_file" : `${__dirname}/temp/passwd.json`
      },
      defaults: {
        edition: "Test",
        dictionary: "Oxford_5000",
        theme: "default"
      },
      games: "test/temp",
      //debug_server: true,
      //debug_game: true
    };
    let server = new Server(config), cookie, gamekey, playerkey;
    
    const serverSock = new TestSocket();
    const clientSock = new TestSocket();
    server.attachSocketHandlers(serverSock);

    serverSock.connect(clientSock);

    serverSock.on("disconnect", () => {
      serverSock.done();
    });
    let sawTurn = false;
    clientSock.on(Notify.MESSAGE, params => {
      //assert(sawTurn); not if human ends up first player
      //console.log("INCOMING message",params);
      if (params.sender === "Advisor") {
        switch (params.text) {
        case "$1 has added '$2' to $3":
          assert.deepEqual(params.args, [
            "test_user", "FROBNOZZ", "Oxford_5000" ]);
          return;
          
        case "'$1' is already in $2":
          assert.deepEqual(params.args, [ "ABSTRACT", "Oxford_5000" ]);
          return;
          
        case "_hint_":
          assert(params.args.length === 4);
          clientSock.done();
          return;
        }
      }
      assert(false, params.text);
    });

    clientSock.on(Notify.TURN, params => {
      //console.log("INCOMING turn");
      assert.equal(params.playerKey, UserManager.ROBOT_KEY);
      assert.equal(params.gameKey, gamekey);
      sawTurn = true;
    });
    
    clientSock.on(Notify.CONNECTIONS, (params, event) => {});

    clientSock.on("*", (params, event) => {
      console.log("CLIENT GOT", event, params);
    });

    return register(server, {
      register_username: "test_user",
      register_password: "test_pass",
      register_email: "test@email.com"
    })
    .then(pk => playerkey = pk)
    .then(() => login(server, {
      login_username: "test_user",
      login_password: "test_pass"
    }))
    .then(c => cookie = c)
    .then(() => new Promise(resolve => {
      chai.request(server.express)
      .post("/createGame")
      .set('Cookie', cookie)
      .send({
        edition: "English_Scrabble",
        dictionary:"Oxford_5000"
      })
      .end((err, res) => {
        //console.log(res.text);
        assert.equal(res.status, 200);
        resolve(res.text);
      });
    }))
    .then(g => gamekey = g)
    .then(() => new Promise(resolve => {
      chai.request(server.express)
      .post(`/join/${gamekey}`)
      .set('Cookie', cookie)
      .end((err, res) => {
        //console.log(res.text);
        assert.equal(res.status, 200, res.text);
        clientSock.emit(Notify.JOIN, {
          gameKey: gamekey,
          playerKey: playerkey
        });
        // Should silently go nowhere, not in a game yet
        clientSock.emit(Notify.MESSAGE, {
          text: "yoohoo!"
        });
        resolve(res.text);
      });
    }))
    .then(() => new Promise(resolve => {
      chai.request(server.express)
      .post(`/addRobot/${gamekey}`)
      .set('Cookie', cookie)
      .end((err, res) => {
        //console.log(res.text);
        assert.equal(res.status, 200, res.text);
        clientSock.emit(Notify.MESSAGE, {
          text: "allow frobnozz"
        });
        clientSock.emit(Notify.MESSAGE, {
          text: "allow abstract"
        });
        resolve(res.text);
      });
    }))
    .then(() => new Promise(resolve => {
      chai.request(server.express)
      .get(`/game/${gamekey}`)
      .set('Cookie', cookie)
      .end((err, res) => {
        //console.log(res.text);
        assert.equal(res.status, 200);
        clientSock.emit(Notify.MESSAGE, { text: "hint" });
        resolve(res.text);
      });
    }))
    .then(() => new Promise(resolve => {
      chai.request(server.express)
      .post(`/leave/${gamekey}`)
      .set('Cookie', cookie)
      .end((err, res) => {
        //console.log(res.text);
        assert.equal(res.status, 200);
        resolve(res.text);
      });
    }))
    .then(() => new Promise(resolve => {
      chai.request(server.express)
      .post(`/removeRobot/${gamekey}`)
      .set('Cookie', cookie)
      .end((err, res) => {
        //console.log(res.text);
        assert.equal(res.status, 200);
        resolve(res.text);
      });
    }))
    .then(() => new Promise(resolve => {
      chai.request(server.express)
      .get("/history")
      .end((err, res) => {
        //console.log(res.text);
        assert.equal(res.status, 200);
        resolve();
      });
    }))
    .then(() => new Promise(resolve => {
      chai.request(server.express)
      .post(`/deleteGame/${gamekey}`)
      .set('Cookie', cookie)
      .end((err, res) => {
        //console.log(res.text);
        assert.equal(res.status, 200);
        resolve(res.text);
      });
    }))
    .then(() => serverSock.wait());
  });

