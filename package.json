{
	"name": "html-scrabble",
	"description": "Multi user Scrabble game",
	"version": "0.1.0",
	"author": {
		"name": "Crawford Currie",
		"url": "https://github.com/cdot"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/cdot/CrosswordGame"
	},
	"main": "server",
	"engines": {
		"node": ">=11.15.0"
	},
	"license": "MIT",
	"dependencies": {
		"cookie-parser": ">=1.3.1",
		"errorhandler": ">=1.1.0",
		"express": ">=3.0.0",
		"express-basic-auth": "^1.2.0",
		"express-negotiate": ">=0.0.5",
		"fs-extra": "^9.1.0",
		"https": "^1.0.0",
		"method-override": ">=2.0.2",
		"node-getopt": "^0.3.2",
		"node-gzip": "^1.1.2",
		"nodemailer": ">=6.4.11",
		"requirejs": "^2.3.6",
		"socket.io": ">=2.3.0"
	},
	"devDependencies": {
		"chai": "^4.3.4",
		"mocha": "^8.3.2"
	},
	"scripts": {
		"web": "node server.js"
	},
	"eslintConfig": {
		"extends": "eslint:recommended",
		"parserOptions": {
			"ecmaVersion": 8
		},
		"env": {
			"shared-node-browser": true,
			"jquery": true
		},
		"globals": {
			"define": false,
			"ArrayBuffer": false,
			"Buffer": false,
			"Uint8Array": false,
			"Uint8ClampedArray": false,
			"Int8Array": false,
			"Int16Array": false,
			"Uint16Array": false,
			"Int32Array": false,
			"Uint32Array": false,
			"Float32Array": false,
			"Float64Array": false,
			"XMLHttpRequest": false,
			"WeakMap": false,
			"require": false,
			"module": false,
			"Promise": false,
			"requirejs": true
		},
		"rules": {
			"strict": 0,
			"no-underscore-dangle": 0,
			"curly": 0,
			"camelcase": 0,
			"no-unused-vars": 1,
			"no-console": 0,
			"no-debugger": 0,
			"no-alert": 1,
			"no-new": 0,
			"new-cap": 0,
			"dot-notation": 1,
			"no-trailing-spaces": 0,
			"no-useless-escape": 1,
			"no-use-before-define": 1,
			"no-loop-func": 1,
			"no-eval": 1,
			"quotes": 0,
			"no-mixed-spaces-and-tabs": 0
		}
	}
}
