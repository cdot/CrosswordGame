{
	"name": "Xanado",
	"description": "Multi user crossword game",
	"version": "3.1.0",
	"type": "module",
	"author": {
		"name": "Crawford Currie",
		"url": "https://github.com/cdot"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/cdot/Xanado"
	},
	"main": "server",
	"engines": {
		"node": ">=12.0.0"
	},
	"license": "MIT",
	"dependencies": {
		"@cdot/cbor": "github:cdot/CBOR",
		"@cdot/dictionary": "github:cdot/dictionary",
		"@rwap/jquery-ui-touch-punch": "github:RWAP/jquery-ui-touch-punch",
		"@wikimedia/jquery.i18n": "latest",
		"async-lock": "latest",
		"bcrypt": "latest",
		"express": "latest",
		"express-session": "latest",
		"https": "latest",
		"jquery": "latest",
		"jquery-ui": "latest",
		"jquery.cookie": "latest",
		"nodemailer": "latest",
		"normalize.css": "latest",
		"passport": "latest",
		"passport-facebook": "latest",
		"passport-google-oauth20": "latest",
		"posix-getopt": "latest",
		"proper-lockfile": "latest",
		"session-file-store": "latest",
		"socket.io": "latest"
	},
	"importmap": "./build/importmap.json",
	"devDependencies": {
		"c8": "latest",
		"chai": "latest",
		"chai-http": "latest",
		"css": "latest",
		"docdash": "latest",
		"eslint": "latest",
		"esprima": "latest",
		"html-loader": "^4.2.0",
		"istanbul": "latest",
		"jsdoc": "latest",
		"jsdom": "latest",
		"marked": "latest",
		"mocha": "latest",
		"tmp-promise": "latest",
		"uglify-js": "latest",
		"webpack": "latest",
		"webpack-cli": "latest"
	},
	"scripts": {
		"build": "node bin/update-indexes;(webpack -c build/wp_sa_games.js & webpack -c build/wp_sa_game.js & webpack -c build/wp_cl_games.js & webpack -c build/wp_cl_game.js)",
		"server": "node bin/server.js",
		"start": "node bin/server.js --debug_game --debug_server",
		"debug": "node bin/server.js --debug_game --debug_server",
		"doc": "jsdoc --verbose -c build/jsdoc_config.json -R DEVELOPING.md -r -d doc src",
		"lint": "eslint src -f unix",
		"test": "mocha --recursive --extension js --timeout=5000 test",
		"coverage": "NODE_ENV=test c8 npm run test",
		"tx": "node bin/checkStrings.js",
		"update": "ncu -u ",
		"docker": "docker build . --tag xanado"
	},
	"eslintConfig": {
		"extends": "eslint:recommended",
		"parserOptions": {
			"sourceType": "module"
		},
		"env": {
			"shared-node-browser": true,
			"jquery": true,
			"es2022": true
		},
		"globals": {
			"assert": "writable"
		},
		"rules": {
			"camelcase": 0,
			"curly": 0,
			"dot-notation": 1,
			"new-cap": 0,
			"no-alert": 0,
			"no-console": 0,
			"no-debugger": 0,
			"no-eval": 0,
			"no-fallthrough": 0,
			"no-global-assign": 0,
			"no-loop-func": 1,
			"no-mixed-spaces-and-tabs": 0,
			"no-new": 0,
			"no-prototype-builtins": 0,
			"no-redeclare": [
				"error",
				{
					"builtinGlobals": false
				}
			],
			"no-trailing-spaces": 1,
			"no-underscore-dangle": 0,
			"no-unused-vars": 1,
			"no-useless-escape": 1,
			"no-use-before-define": 0,
			"quotes": 0,
			"strict": 0
		}
	}
}
