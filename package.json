{
	"name": "Xanado",
	"description": "Multi user crossword game",
	"version": "3.1.0",
	"type": "module",
	"author": {
		"name": "Crawford Currie",
		"url": "https://github.com/cdot"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/cdot/Xanado"
	},
	"main": "server",
	"engines": {
		"node": ">=12.0.0"
	},
	"license": "MIT",
	"dependencies": {
		"@cdot/cbor": "github:cdot/CBOR",
		"@cdot/dictionary": "github:cdot/dictionary",
		"@rwap/jquery-ui-touch-punch": "github:RWAP/jquery-ui-touch-punch",
		"@wikimedia/jquery.i18n": "^1.0.7",
		"async-lock": "^1.4.0",
		"bcrypt": "^5.1.0",
		"clean-css": "^5.3.1",
		"cookie-parser": ">=1.4.6",
		"errorhandler": ">=1.5.1",
		"express": ">=4.18.2",
		"express-basic-auth": ">=1.2.1",
		"express-session": "^1.17.3",
		"https": ">=1.0.0",
		"jquery": "^3.6.2",
		"jquery-ui": "^1.13.2",
		"jquery.cookie": "^1.4.1",
		"nodemailer": ">=6.8.0",
		"normalize.css": "^8.0.1",
		"passport": "^0.6.0",
		"passport-facebook": "^3.0.0",
		"passport-google-oauth20": "^2.0.0",
		"posix-getopt": "^1.2.1",
		"proper-lockfile": "^4.1.2",
		"request": "^2.88.2",
		"session-file-store": "^1.5.0",
		"socket.io": ">=4.5.4"
	},
	"importmap": "./build/importmap.json",
	"devDependencies": {
		"c8": "latest",
		"chai": "latest",
		"chai-http": "latest",
		"css": "latest",
		"docdash": "latest",
		"eslint": "latest",
		"esprima": "latest",
		"istanbul": "latest",
		"jsdoc": "latest",
		"jsdom": "latest",
		"marked": "latest",
		"mocha": "latest",
		"tmp-promise": "latest",
		"uglify-js": "latest",
		"webpack": "latest",
		"webpack-cli": "latest"
	},
	"scripts": {
		"build": "webpack -c build/wp_sa_games.js & webpack -c build/wp_sa_game.js & webpack -c build/wp_cl_games.js & webpack -c build/wp_cl_game.js",
		"server": "node bin/server.js",
		"start": "node bin/server.js --debug_game --debug_server",
		"debug": "node bin/server.js --debug_game --debug_server",
		"doc": "jsdoc --verbose -c build/jsdoc_config.json -R DEVELOPING.md -r -d doc src",
		"lint": "eslint src -f unix",
		"test": "mocha --recursive --extension js --timeout=5000 test",
		"coverage": "nyc --hook-run-in-context --hook-run-in-this-context --reporter=html --reporter text npm run test",
		"tx": "node bin/checkStrings.js",
		"update": "ncu -u ",
		"docker": "docker build . --tag xanado"
	},
	"eslintConfig": {
		"extends": "eslint:recommended",
		"parserOptions": {
			"sourceType": "module",
			"ecmaVersion": 13
		},
		"env": {
			"shared-node-browser": true,
			"jquery": true,
			"es6": true
		},
		"globals": {
			"assert": "writable",
			"define": "writable",
			"document": "readonly",
			"global": "readonly",
			"Mocha": "writable",
			"WeakRef": "readonly",
			"describe": "readonly",
			"it": "readonly"
		},
		"rules": {
			"camelcase": 0,
			"curly": 0,
			"dot-notation": 1,
			"new-cap": 0,
			"no-alert": 0,
			"no-console": 0,
			"no-debugger": 0,
			"no-eval": 0,
			"no-fallthrough": 0,
			"no-global-assign": 0,
			"no-loop-func": 1,
			"no-mixed-spaces-and-tabs": 0,
			"no-new": 0,
			"no-prototype-builtins": 0,
			"no-redeclare": [
				"error",
				{
					"builtinGlobals": true
				}
			],
			"no-trailing-spaces": 0,
			"no-underscore-dangle": 0,
			"no-unused-vars": 0,
			"no-useless-escape": 1,
			"no-use-before-define": 0,
			"quotes": 0,
			"strict": 0
		}
	}
}
